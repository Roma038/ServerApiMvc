
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignIntoAcc</title>
</head>
<body>
    <div>
        <form action="/Home/SignIntoAcc" method="post">
            <table>
                <tr>
                    <td><label for="Username">Enter the username</label></td>
                    <td><input type="text" name="Username" required/></td>
                </tr>
                <tr>
                    <td><label for="Password">Enter the password</label></td>
                    <td><input type="password" name="Password" required/></td>
                    <td><input type="submit" name="Confirm" value="Confirm" /></td>
                </tr>
                <tr>
                    <td><a href="/Home/ForgotPassword">Forgot the password ?</a></td>
                </tr>
            </table>

        </form>
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewBag.Message");
                }
            </script>
        }
    </div>
</body>
</html>
